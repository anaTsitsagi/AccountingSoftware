@page "/"

<!-- Main Container: Full Viewport -->
<div class="d-flex flex-column vh-100 text-white bg-dark m-0 p-0 overflow-hidden">

    <!-- Header (25% height) -->
    <div class="container-fluid text-center d-flex flex-column justify-content-center align-items-center" style="height: 25vh;">
        <h2 class="fw-semibold mb-1">Empowering Your Vision</h2>
        <p class="small mb-0">Tech-driven solutions to scale your business</p>
    </div>

    <!-- Services Grid -->
    <div class="container-fluid px-0 flex-grow-1">
        <div class="row g-0 text-dark h-100">

            <!-- IT Strategy -->
            <div class="col-6 col-md-3">
                <div class="card h-100 text-center rounded-0 animate__animated animate__fadeInUp animate__delay-1s service-card">
                    <div class="card-body px-2 py-3">
                        <div class="mb-2 text-primary"><i class="bi bi-compass" style="font-size: 1.5rem;"></i></div>
                        <h6 class="fw-bold text-primary">IT Strategy</h6>
                        <p class="small mb-1">✓ In-depth understanding of your business needs</p>
                        <p class="small mb-1">✓ Evaluate and align with your budget</p>
                        <p class="small mb-1">✓ Provide multiple tailored IT strategies</p>
                        <p class="small">✓ Help select the best-fit solution collaboratively</p>
                    </div>
                </div>
            </div>

            <!-- Solution Design -->
            <div class="col-6 col-md-3">
                <div class="card h-100 text-center rounded-0 animate__animated animate__fadeInUp animate__delay-1s service-card">
                    <div class="card-body px-2 py-3">
                        <div class="mb-2 text-primary"><i class="bi bi-diagram-3" style="font-size: 1.5rem;"></i></div>
                        <h6 class="fw-bold text-primary">Solution Design</h6>
                        <p class="small mb-1">✓ You bring a clear business idea and strategy</p>
                        <p class="small mb-1">✓ We analyze modules and write technical specs</p>
                        <p class="small mb-1">✓ Build a complete delivery pipeline</p>
                        <p class="small mb-1">✓ Define all tasks needed for delivery</p>
                        <p class="small">✓ Share plans via Jira, Trello, or Azure DevOps</p>
                    </div>
                </div>
            </div>

            <!-- E2E Solution Development -->
            <div class="col-6 col-md-3">
                <div class="card h-100 text-center rounded-0 animate__animated animate__fadeInUp animate__delay-1s service-card">
                    <div class="card-body px-2 py-3">
                        <div class="mb-2 text-primary"><i class="bi bi-cpu" style="font-size: 1.5rem;"></i></div>
                        <h6 class="fw-bold text-primary">E2E Solution Development</h6>
                        <p class="small mb-1">✓ Build desktop applications</p>
                        <p class="small mb-1">✓ Develop scalable backend services</p>
                        <p class="small mb-1">✓ Create modern web solutions</p>
                        <p class="small mb-1">✓ Develop cross-platform mobile apps</p>
                        <p class="small mb-1">✓ Integrate with existing software</p>
                        <p class="small mb-1">✓ Implement cloud-based services</p>
                        <p class="small">✓ Apply AI where beneficial</p>
                    </div>
                </div>
            </div>

            <!-- Support & Future Plan -->
            <div class="col-6 col-md-3">
                <div class="card h-100 text-center rounded-0 animate__animated animate__fadeInUp animate__delay-1s service-card">
                    <div class="card-body px-2 py-3">
                        <div class="mb-2 text-primary"><i class="bi bi-tools" style="font-size: 1.5rem;"></i></div>
                        <h6 class="fw-bold text-primary">Support & Future Plan</h6>
                        <p class="small mb-1">✓ Ongoing support for all delivered apps</p>
                        <p class="small mb-1">✓ Choose from 4 support levels</p>
                        <p class="small mb-1">✓ Request solution reviews anytime</p>
                        <p class="small">✓ Get updated designs with implementation roadmap</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Sticky Contact Bar -->
    <footer class="bg-primary text-white text-center py-2 position-sticky bottom-0 w-100">
        <p class="mb-1">📧 contact@yourcompany.com | 🌐 yourcompany.com</p>
        <a href="mailto:contact@yourcompany.com" class="btn btn-sm btn-light">Let's Talk</a>
    </footer>
</div>
