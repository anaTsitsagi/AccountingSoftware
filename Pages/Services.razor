@page "/services"
@using Microsoft.AspNetCore.Components.Routing
@inject NavigationManager Nav

<div class="max-w-6xl mx-auto mb-16 px-6 pt-12">
    <!-- Page title -->
    <h1 class="text-3xl font-bold mb-8">Our Services</h1>

    <!-- Services grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Solution Design -->
        <div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
            <h2 class="text-xl font-semibold mb-2">Solution Design</h2>
            <p class="mb-4">Craft tailored, scalable solutions that align with your business objectives and technology roadmap.</p>
            <NavLink class="text-blue-600 hover:underline" href="/services/solution-design" Match="NavLinkMatch.All">Learn more</NavLink>
        </div>

        <!-- Software Development -->
        <div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
            <h2 class="text-xl font-semibold mb-2">Software Development</h2>
            <p class="mb-4">End-to-end application development across web, mobile, and desktop platforms to drive innovation.</p>
            <NavLink class="text-blue-600 hover:underline" href="/services/e2e-development" Match="NavLinkMatch.All">Learn more</NavLink>
        </div>

        <!-- Support -->
        <div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
            <h2 class="text-xl font-semibold mb-2">Support & Maintenance</h2>
            <p class="mb-4">Reliable, ongoing support and maintenance services to ensure optimal performance and uptime.</p>
            <NavLink class="text-blue-600 hover:underline" href="/services/support" Match="NavLinkMatch.All">Learn more</NavLink>
        </div>

        <!-- Fourth Service (Placeholder) -->
        <div class="p-6 bg-white rounded-lg shadow hover:shadow-lg transition">
            <h2 class="text-xl font-semibold mb-2">[Fourth Service]</h2>
            <p class="mb-4">Brief summary of the fourth service goes here.</p>
            <NavLink class="text-blue-600 hover:underline" href="/[fourth-service-route]" Match="NavLinkMatch.All">Learn more</NavLink>
        </div>
    </div>
</div>
