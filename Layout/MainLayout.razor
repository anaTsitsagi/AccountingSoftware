@using System.Globalization
@using Microsoft.Extensions.Localization
@inherits LayoutComponentBase

@inject NavigationManager Nav
@inject IJSRuntime JS
@inject IStringLocalizer<MainLayout> L

<div class="page">
    <!-- 1) Compact white nav at top with larger logo -->
    <nav class="bg-white sticky top-0 left-0 w-full z-20">
        <div class="max-w-6xl mx-auto flex items-center justify-between px-6 h-16">
            <a href="/" class="text-2xl md:text-3xl font-space font-bold text-accent1 hover:text-accent2 transition">
                logyx<span class="text-gray-800">.tech</span>
            </a>

            <!-- Desktop menu -->
            <ul class="hidden md:flex items-center space-x-6">
                <li>
                    <a href="#services"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition">
                        @L["Nav_Services"]
                    </a>
                </li>
                <li>
                    <a href="#about"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition">
                        @L["Nav_About"]
                    </a>
                </li>
                <li>
                    <a href="#contact"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition">
                        @L["Nav_Contact"]
                    </a>
                </li>
                <li>
                    <select class="border border-accent1 text-accent1 rounded p-1 text-sm hover:border-accent2 hover:text-accent2 transition"
                            @onchange="ChangeCulture"
                            value="@currentCulture">
                        <option value="en">@L["Lang_EN"]</option>
                        <option value="ru">@L["Lang_RU"]</option>
                        <option value="ka">@L["Lang_KA"]</option>
                    </select>
                </li>
            </ul>

            <!-- Mobile toggle -->
            <button class="md:hidden p-2 rounded hover:bg-gray-100 transition"
                    @onclick="ToggleMenu"
                    aria-label="@L["Aria_ToggleMenu"]">
                @if (!isMenuOpen)
                {
                    <svg class="w-6 h-6 text-accent1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                }
                else
                {
                    <svg class="w-6 h-6 text-accent1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12" />
                    </svg>
                }
            </button>
        </div>

        <!-- Mobile menu panel -->
        <div class="md:hidden bg-white transition-max-h duration-300 overflow-hidden"
             style="max-height:@(isMenuOpen ? "300px" : "0")">
            <ul class="flex flex-col px-6 py-4 space-y-4">
                <li>
                    <a href="#services"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition"
                       @onclick="ToggleMenu">
                        @L["Nav_Services"]
                    </a>
                </li>
                <li>
                    <a href="#about"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition"
                       @onclick="ToggleMenu">
                        @L["Nav_About"]
                    </a>
                </li>
                <li>
                    <a href="#contact"
                       class="text-gray-800 font-normal hover:text-gray-600 hover:scale-110 transform transition"
                       @onclick="ToggleMenu">
                        @L["Nav_Contact"]
                    </a>
                </li>
                <li>
                    <select class="border border-accent1 text-accent1 rounded p-1 text-sm hover:border-accent2 hover:text-accent2 transition"
                            @onchange="ChangeCulture"
                            value="@currentCulture">
                        <option value="en">@L["Lang_EN"]</option>
                        <option value="ru">@L["Lang_RU"]</option>
                        <option value="ka">@L["Lang_KA"]</option>
                    </select>
                </li>
            </ul>
        </div>
    </nav>

    <!-- 2) Normal flow content: no top-padding needed -->
    <main class="m-0 p-0 w-full pt-0">
        <article class="m-0 p-0 w-full">
            @Body
        </article>

        <!-- Footer -->
        <footer class="bg-accent1 text-white py-4">
            <div class="max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between px-6">
                <div class="text-sm">@L["Footer_Copyright"]</div>
                <div class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-6">
                    <p class="text-sm">info@logyx.tech</p>
                </div>
            </div>
        </footer>
    </main>
</div>

@code {
    private bool isMenuOpen;
    string currentCulture = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;

    void ToggleMenu() => isMenuOpen = !isMenuOpen;

    async Task ChangeCulture(ChangeEventArgs e)
    {
        var culture = e.Value.ToString();
        await JS.InvokeVoidAsync("localStorage.setItem", "blazorCulture", culture);
        Nav.NavigateTo(Nav.Uri, forceLoad: true);
    }
}
